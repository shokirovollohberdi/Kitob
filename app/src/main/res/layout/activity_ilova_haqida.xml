<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tt_back"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".IlovaHaqida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/creator_book" />

        <TextView
            android:id="@+id/image_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font1"
            android:text="Dastur havaskor TikTokerlar uchun yaratildi.Ushbu ilova orqali siz o'z TikTok accountingizni yuritayotgandagi eng katta 10ta xatolarni bilib olasiz.

Ushbu dasturni yaratishdan maqsad bachkana contectni targ'ib qilish yoki qo'llab quvvatlash emas emas,balki Iqtidorli,shijoatli bir so'z bilan aytganda Millat Umidlarini xalqga o'zlarini ko'rsatishlarida oz bo'lsa ham yordam berish.

Kitob muallifi Nodirbek Gafurov - bloggerlar, ekspertlar va biznes uchun
TikTok ustozi."
            android:textColor="#00FF0B"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/insta"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/insta" />

            <ImageView
                android:id="@+id/tiktok"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@drawable/tiktoklogotip" />

            <ImageView
                android:id="@+id/tg"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerInside"
                android:src="@drawable/tg_logo"
                />

            <ImageView
                android:id="@+id/phone"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_phone" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>